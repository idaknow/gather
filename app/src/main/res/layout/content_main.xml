<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="part4project.uoa.gather.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/nutrition_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:onClick="intentNutrition"
        android:text="Nutrition"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.982" />

    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="239dp"
        android:layout_height="51dp"
        android:text="Hello, John!"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/fitness_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="8dp"
        android:onClick="intentFitness"
        android:text="Fitness"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.982"
        tools:layout_editor_absoluteY="454dp" />

    <CalendarView
        android:id="@+id/simpleCalendarView"
        android:layout_width="322dp"
        android:layout_height="384dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.425"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="107dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"
        android:firstDayOfWeek="2"/>

    <ImageView
        android:id="@+id/fitness_icon"
        android:layout_width="89dp"
        android:layout_height="78dp"
        app:srcCompat="@drawable/ic_directions_run_black_24dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="59dp"
        app:layout_constraintHorizontal_bias="0.232"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/nutrition_icon"
        android:layout_width="85dp"
        android:layout_height="81dp"
        app:srcCompat="@drawable/ic_local_dining_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="59dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.657"
        android:visibility="invisible"/>

</android.support.constraint.ConstraintLayout>
